<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ing_list_item_ingredient_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ingredient" />

    <TextView
        android:id="@+id/ing_list_item_quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/ing_list_item_measure_tv"
        app:layout_constraintEnd_toStartOf="@+id/ing_list_item_measure_tv"
        app:layout_constraintTop_toTopOf="@+id/ing_list_item_measure_tv"
        tools:text="3" />

    <TextView
        android:id="@+id/ing_list_item_measure_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="C" />
</androidx.constraintlayout.widget.ConstraintLayout>